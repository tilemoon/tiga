{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "target": "es6",
    "lib": ["es6", "dom", "DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "types"],
  "exclude": ["dist", "node_modules"],
  "types": ["typePatches"]
}
